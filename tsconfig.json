{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ES2020",
    "lib": ["dom", "es2015", "esnext.asynciterable"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "checkJs": false,
    // "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./@types"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
